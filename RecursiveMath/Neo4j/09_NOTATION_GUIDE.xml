<notation_guide>
    <metadata>
        <document_id>NOTATION</document_id>
        <file>09_NOTATION_GUIDE.xml</file>
        <references>
            <ref>00_MASTER_INDEX.xml</ref>
            <ref>07_THEORY_SUMMARY.xml</ref>
