    <quick_reference>
        <for_claude>
            <instruction>Start with 00_MASTER_INDEX.xml</instruction>
            <instruction>Use namespace 'recursive_math' in all queries</instruction>
            <instruction>Prefix all queries with CYPHER 25</instruction>
            <instruction>Update 06_PENDING_TASKS.xml each session</instruction>
        </for_claude>
        
        <key_queries>
            <query purpose="Get entire theory">
                CYPHER 25
                MATCH (space:AlgebraicSpace {name: 'recursive_math'})
                OPTIONAL MATCH (space)-[r]->(component)
                RETURN space, r, component
            </query>
            
            <query purpose="List all definitions">
                CYPHER 25
                MATCH (def:Definition {namespace: 'recursive_math'})
                RETURN def.name, def.exists, def.definition
            </query>
            
            <query purpose="Show approximations">
                CYPHER 25
                MATCH (approx:RecursiveApproximation {namespace: 'recursive_math'})
                MATCH (approx)-[:APPROXIMATES]->(def)
                RETURN def.name, approx.level_0, approx.level_1, approx.level_2
            </query>
        </key_queries>
    </quick_reference>

